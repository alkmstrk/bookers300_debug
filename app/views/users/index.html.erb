<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/list', user: current_user, book: @book %>
    </div>

    <div class="col-md-9">

      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%=  attachment_image_tag user, :profile_image, format:"jpeg",fallback:"no_image.jpg", size:"40x40" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to 'Show', user_path(user) %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>