<%= render 'books/errors', var: @book %>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/list', user: @book.user, book: @book %>
    </div>

    <div class="col-md-9">

      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%=  attachment_image_tag @book.user, :profile_image, format:"jpeg",fallback:"no_image.jpg", size:"40x40" %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>

            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "てやんでい" %></td>
            <% end %>

          </tr>
        </tbody>

      </table>
    </div>

  </div>
</div>
